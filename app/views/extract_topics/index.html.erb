<div class="item"><h1> Process Topic Models for the <%=@collection.name.titleize%> Collection </h1>
    <table>
  <thead>
    <tr>
      <th>Topic Model</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @extract_topics.each do |extract| %>
    <tr>
    <td> <%= link_to extract[:routine_name], collection_extract_topic_topics_path(@collection[:id] , extract[:id]) %> </td>
    <td> <%= extract[:status] %> </td>
  </tr>
    <% end %>
  </tbody>
</table>

<div class="link_nav">
  <%= link_to 'Add a New Topic Model',  new_collection_extract_topic_path %>
</div>

</div>
