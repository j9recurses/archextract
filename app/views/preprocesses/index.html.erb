<h1>Pre-Processes for the <%=@collection.name.titleize%> Collection</h1>

<table>
  <thead>
    <tr>
    <th>Routine Name</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @preprocesses.each do |preprocess| %>
      <tr>
      <td><%= preprocess[:routine_name] %> </td>
        <td><%= link_to 'Show', collection_preprocesses_path(@collection[:id]) %></td>
        <td><%= link_to 'Edit',    edit_collection_preprocess_path(@collection[:id], preprocess[:id]) %></td>
        <td><%= link_to 'Destroy',   collection_preprocess_path(@collection[:id], preprocess[:id]) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new_link">
<%= link_to 'Add a New PreProcess', new_collection_preprocess_path %>
</div>
