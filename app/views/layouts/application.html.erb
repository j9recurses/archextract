            <span class="icon-bar"></span>
          </a>
          <div id="mynavarch">
          <img src="/images/book.jpg" alt="exploding book" /> Archextract</a>
          </div>
          <div class="container nav-collapse">
            <ul class="nav">
             <li> <div class="mynavitems_first"> <%= link_to "Collections", collections_path  %></div></li>
               <li><div class="mynavitems"><%= link_to "Topics", "topics_path"  %></div> </li>
             <li> <div class="mynavitems"><a href="http://bancroft.berkeley.edu/"> Bancroft Library Home</a></div></li>
            </ul>
            </div>
          </div>
          <!--/.nav-collapse -->
        </div>
      </div>
      </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="span9">
            </br></br></br></br>
             <div id="topbreak"></div>
             <%= flash_messages %>
            <%= yield %>
          </div>
          <div class="span3">
            <div class="well sidebar-nav">

              <!--<<h3>Sidebar</h3>-->
              <ul class="nav nav-list">
              </br> </br>  </br>
                 <!--<<li class="nav-header"></li>-->
                <li><%= link_to 'Add a New Collection', new_collection_path %></li>
                <li><%= link_to "Browse Topics", "/path2"  %></li>
              </ul>
            </div><!--/.well -->
